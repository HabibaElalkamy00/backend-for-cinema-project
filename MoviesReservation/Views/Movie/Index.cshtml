@using System.Text
@model IEnumerable<MoviesReservation.ViewModel.Movies>
@{
    
}
<div class="all-movies">
    <div class="container">
        <div class="row links">
            <a  asp-controller="movie" asp-action="index" asp-route-id="@null"   class="btn col-lg-3 col-md-3 col-sm-12">All Movies</a>
            <a  asp-controller="movie" asp-action="index" asp-route-id="0"  class="btn col-lg-3 col-md-3 col-sm-12">Popular Now</a>
            <a  asp-controller="movie" asp-action="index" asp-route-id="1" class="btn col-lg-3 col-md-3 col-sm-12">2D</a>
            <a  asp-controller="movie" asp-action="index" asp-route-id="2" class="btn col-lg-3 col-md-3 col-sm-12">3D</a>
            <a  asp-controller="movie" asp-action="index" asp-route-id="3" class="btn col-lg-3 col-md-3 col-sm-12">For Kids</a>
            <a  asp-controller="movie" asp-action="index" asp-route-id="4" class="btn col-lg-3 col-md-3 col-sm-12">Coming Soon</a>
        </div>
    </div>
    <div class="container">
        <div class="row cards">
            @foreach(var Movie in Model)
            {

                
                <div class="card col-lg-4 col-md-6 col-sm-12">
                    <img src="~/images/@Movie.Movie.Image" alt="">
                    <div class="content">
                        <p class="gerne">
                         @{StringBuilder genreString = new StringBuilder();
                                for (int i = 0; i < Movie.Gener.Count(); i++)
                           {
                                    genreString.Append(Movie.Gener.ElementAt(i).Name);
                                    if (i < Movie.Gener.Count() - 1)
                                    {
                                genreString.Append(" | ");
                             }
                           }
                            @genreString.ToString()
                           }
                        </p>
                        <p class="time">@Movie.formattedDuration</p>
                        <p class="lang">@Movie.Movie.Language </p>
                        <a asp-controller="reservation" asp-action="index" asp-route-id="@Movie.Movie.Id" class="btn">Get Ticket</a>
                        <a asp-controller="movie" asp-action="Detail" asp-route-id="@Movie.Movie.Id" class="btn2">Watch Trailer</a>
                    </div>
                </div>
          
            }
        </div>
